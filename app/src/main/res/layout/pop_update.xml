<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/pop_Update_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_bantouming"/>
    <RelativeLayout
        android:id="@+id/ll_wite_bg"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/updata_write_bg"
        >
        <TextView
            android:id="@+id/tv_update_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="正在加载中..."
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/ll_wite_bg"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/dialog_red_bg">
        <Button
            android:id="@+id/btu_update"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/update_red_btn"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_update"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/upgrade_hint"
        android:layout_alignBottom="@id/ll_wite_bg"
        android:layout_marginBottom="133dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/img_update_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/icon_close_normal"
        android:layout_alignRight="@id/ll_wite_bg"
        android:layout_alignTop="@id/ll_wite_bg"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="-15dp"
        />
    <TextView
        android:id="@+id/tv_update_banben"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text=""
        android:background="@drawable/update_back"
        android:layout_alignBottom="@id/img_update"
        android:layout_alignRight="@id/img_update"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        />


</RelativeLayout>